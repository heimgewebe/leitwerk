{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "urn:heimgewebe:contracts:artifacts:uncertainty.report.v1",
  "title": "uncertainty.report.v1",
  "type": "object",
  "description": "Schema for uncertainty.report.v1 artifacts.",
  "additionalProperties": true,
  "allOf": [
    {
      "$ref": "urn:heimgewebe:contracts:fragments:artifact.header.v1"
    },
    {
      "properties": {
        "version": {
          "type": "string",
          "const": "uncertainty.report.v1"
        },
        "data": {
          "type": "object",
          "description": "Payload data for the uncertainty report.",
          "properties": {
            "score": {
              "type": "number",
              "minimum": 0,
              "maximum": 1,
              "description": "Uncertainty score between 0.0 and 1.0."
            },
            "risks": {
              "type": "array",
              "description": "List of identified risks.",
              "items": {
                "type": "object",
                "properties": {
                  "risk": {
                    "type": "string",
                    "description": "Description of the risk."
                  },
                  "severity": {
                    "type": "string",
                    "enum": ["low", "medium", "high"]
                  },
                  "mitigation": {
                    "type": "string"
                  }
                },
                "required": ["risk"]
              }
            }
          },
          "required": [
            "score"
          ]
        }
      },
      "required": [
        "data"
      ]
    }
  ]
}
