{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "urn:heimgewebe:contracts:artifacts:uncertainty.report.v1",
  "title": "uncertainty.report.v1",
  "type": "object",
  "description": "Schema for uncertainty.report.v1 artifacts.",
  "additionalProperties": true,
  "allOf": [
    {
      "$ref": "urn:heimgewebe:contracts:fragments:artifact.header.v1"
    },
    {
      "properties": {
        "version": {
          "type": "string",
          "const": "uncertainty.report.v1"
        },
        "data": {
          "type": "object",
          "description": "Payload data for the uncertainty report.",
          "properties": {
            "score": {
              "type": "number",
              "minimum": 0,
              "maximum": 1,
              "description": "Uncertainty score between 0.0 and 1.0."
            },
            "reasons": {
              "type": "array",
              "description": "List of simple string reasons (Phase 1).",
              "items": {
                "type": "string"
              }
            },
            "risks": {
              "type": "array",
              "description": "List of structured risks (Phase 2).",
              "items": {
                "type": "object",
                "properties": {
                  "id": {
                    "type": "string",
                    "description": "Optional ID for the risk."
                  },
                  "risk": {
                    "type": "string",
                    "description": "Description of the risk (legacy field)."
                  },
                  "reason": {
                    "type": "string",
                    "description": "Description of the risk/reason."
                  },
                  "severity": {
                    "type": "string",
                    "enum": [
                      "low",
                      "medium",
                      "high"
                    ]
                  },
                  "mitigation": {
                    "type": "string"
                  }
                },
                "anyOf": [
                  { "required": ["risk"] },
                  { "required": ["reason"] }
                ]
              }
            }
          },
          "required": [
            "score"
          ],
          "anyOf": [
            {
              "required": [
                "reasons"
              ]
            },
            {
              "required": [
                "risks"
              ]
            }
          ]
        }
      },
      "required": [
        "data"
      ]
    }
  ]
}
